require("dotenv").config(); // Load .env variables
console.log(process.env.JWT_SECRET);
const jwt = require('jsonwebtoken')
const mongoose = require('mongoose');
const User = require('../models/User');
const AdminEmail = require('../models/AdminEmail'); 

const handleUserErrors = require('../utils/handleUserErrors');

const signToken = (user) =>
  jwt.sign({ id: user._id, role: user.role }, process.env.JWT_SECRET, { expiresIn: '1d' });

exports.userSignup = async (req, res) => {
  
  try {
    const { name, email, password } = req.body;
    console.log(name);

    const existingUser = await User.findOne({ email });
    if (existingUser) {
      console.log("user exist");
      throw new Error('User already exists'); 
    }

    const user = await User.create({ name, email, password, role: 'user' });

    const token = signToken(user);
    res.status(201).json({ message: 'User created successfully', token, role: user.role });
  } catch (err) {
  const errors = handleUserErrors(err);
  res.status(400).json({
    message: Object.values(errors).find(msg => msg) || 'Something went wrong',
    errors
  });
}
};

exports.userLogin = async (req, res) => {
  try {
    const { email, password } = req.body;
    const user = await User.findOne({ email, role: 'user' }).select('+password');

    if (!user || !(await user.correctPassword(password))) {
      throw new Error('Invalid email or password');
    }

    const token = signToken(user);
    res.status(200).json({ message: 'Logged in', token, role: user.role });
  } catch (err) {
    const errors = handleUserErrors(err);
    res.status(400).json({ errors });
  }
};

// ADMIN LOGIN
// collection with allowed admin emails

exports.adminLogin = async (req, res) => {
  try {
    const { email } = req.body;

    // Check if email exists in admin collection
    const adminEmailExists = await AdminEmail.findOne({ email });
    if (!adminEmailExists) {
      throw new Error('Invalid admin email');
    }

    // Optional: fetch admin user details if needed
    const admin = await User.findOne({ email, role: 'admin' });

    const token = signToken(admin || { email, role: 'admin' });
    res.status(200).json({ message: 'Admin logged in', token, role: 'admin' });

  } catch (err) {
    // Structured error
    res.status(400).json({
      errors: { email: err.message }
    });
  }
};


